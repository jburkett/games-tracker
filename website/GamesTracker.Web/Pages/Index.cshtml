@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<table class="table table-striped">
    <thead>
    <tr>
        <th></th>
        <th>Name</th>
        <th>Description</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var game in Model.Games)
    {
        <tr data-id="@game.Id">
            <td><i class="bi bi-file-text"></i></td>
            <td>@game.Name</td>
            <td>@game.Description</td>
        </tr>
    }
    </tbody>
</table>
